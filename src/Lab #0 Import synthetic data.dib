// read fhir data from D:\Hongyu\Project\data\synthea-data\fhir directory

using Hl7.Fhir.Model;
using Hl7.Fhir.Rest;

var client = new FhirClient("http://localhost:8080/fhir");

#!csharp

using System.IO;
using Hl7.Fhir.Serialization;


var path = @"C:\Hongyu\Data\上課資料";
var files = Directory.GetFiles(path, "*.json");
var parser = new FhirJsonDeserializer();

foreach (var file in files)
{
    if (file.Contains("hospital") || file.Contains("practitioner")){
        try
        {
            Bundle bundle = parser.Deserialize<Bundle>(File.ReadAllText(file));

            var response = client.TransactionAsync(bundle).GetAwaiter().GetResult();

            Console.WriteLine($"Processed {file}");
        }
        catch (Exception e)
        {
            Console.WriteLine($"Error processing {file}: {e.Message}");
        }
    }
}


